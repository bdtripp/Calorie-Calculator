<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pcc.caloriecalculator.OutputActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:src="@drawable/runner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <!--Burn Rate-->

        <TextView
            android:id="@+id/burnRateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/burn_rate_label"
            android:textStyle="bold"
            android:layout_margin="@dimen/left_column_widgets"
            android:maxLines="1"
            android:textSize="@dimen/large_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calorieBurnRate"
                android:ems="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calorie_burn_rate"
                android:textSize="@dimen/large_text_size"
                android:textAlignment="textEnd"
                android:layout_gravity="end" />

            <TextView
                android:id="@+id/caloriesPerHourLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_space"
                android:paddingRight="@dimen/medium_space"
                android:text="@string/calories_per_hour_label"
                android:textSize="@dimen/large_text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>